<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".controller.member.MemberJoinActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mb_join_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6C92">

        <TextView
            android:id="@+id/mb_join_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="会社評価匿名コミュニティ(Join Sample)"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mb_join_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="#70708E"
                android:contentDescription="testImage"
                android:src="@drawable/mb_p_ks_logo" />

            <TextView
                android:id="@+id/mb_join_message_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/mb_join_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="XXXXXサービスにようこそ！"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/mb_join_email_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="E-Mail"
                android:autofillHints="E-Mail"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:paddingLeft="10dp"
                android:textColor="#231E31"
                android:textColorHint="#CACACA" />

            <EditText
                android:id="@+id/mb_join_nick_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="ニックネーム"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:textColor="#231E31"
                android:textColorHint="#CACACA" />

            <EditText
                android:id="@+id/mb_join_pw_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="パスワード"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:textColor="#231E31"
                android:textColorHint="#CACACA" />

            <TextView
                android:id="@+id/mb_join_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="権限を選んでください。"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/mb_join_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/mb_join_normal_mem_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:paddingLeft="10dp"
                android:text="一般会員"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/mb_join_regular_mem_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:paddingLeft="10dp"
                android:text="正会員"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/mb_join_admin_mem_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:paddingLeft="10dp"
                android:text="管理者"
                android:textColor="#000000" />

            </RadioGroup>

            <Button
                android:id="@+id/mb_join_sign_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#323151"
                android:text="Sign In"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cp_frag_help"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
<!--    android:background="898989"-->














            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cp_frag_guide"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="review ガイドライン"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView

                    android:layout_margin="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:id="@+id/iv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/cp_p_right_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cp_frag_guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="以下のガイドラインを守ってレビューを作成してください。"
        android:textSize="20dp"
        android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@id/constraintlayout_guide"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/cp_frag_guideline2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guide_line"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/cp_frag_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/cp_frag_guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="トモドモは、透明かつ信頼できる情報を提供するため以下のような指針を守ります。"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cp_frag_guideline2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/cp_frag_guideline4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guide_line2"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/cp_frag_guideline3"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
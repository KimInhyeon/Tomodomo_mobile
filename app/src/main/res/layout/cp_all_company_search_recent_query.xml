<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cp_all_company_search_recent_query_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/cp_all_company_search_recent_query_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cp_all_company_serach_recent_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cp_p_image_clear"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:layout_constraintBottom_toTopOf="@id/cp_all_company_search_recent_query_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

         />

    <View
        android:id="@+id/cp_all_company_search_recent_query_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#dfdfdf"
        app:layout_constraintTop_toBottomOf="@id/cp_all_company_search_recent_query_tv"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
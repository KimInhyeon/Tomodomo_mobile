<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.mypage.ModifyProfileActivity"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_ios_black_24dp"
            android:background="@color/white"
            android:id="@+id/backPress"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="プロフィール修正"
            android:layout_gravity="center" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/modifyProfileBtn"
            android:text="保存"
            android:textColor="#8E8B8B"
            android:layout_gravity="right"
            android:backgroundTint="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ニックネーム（5回変更可能）"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modifyNickNameEditText"
        android:background="@null"
        android:textSize="23sp"
        android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="現在のニックネームと同様です。"
            android:paddingBottom="20dp"
            android:background="@drawable/border_bottom"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="現職場"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新しい会社"
            android:textSize="18sp"
            android:paddingVertical="10dp"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"/>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/annual_text_title"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="年棒等数計算機 "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="16dp" />


        <TextView
            android:id="@+id/annual_text_annual_income"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="契約年俸"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextAnnualIncome"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="62dp"
            android:ems="10"
            android:inputType="phone"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/annual_text_monetary_unit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="円"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.985"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/annual_text_explain"
            android:layout_width="150dp"
            android:layout_height="12dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="(賞与金包含)"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ff0000"
            android:textDirection="ltr"
            android:textSize="12sp"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/annual_text_job_group"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="職群"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerOfJobList"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="20dp"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_marginTop="352dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="雇用タイプ"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerOfEmploymentType"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="20dp"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/annual_text_work_years"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="15dp"
            android:clickable="false"
            android:fitsSystemWindows="false"
            android:fontFamily="sans-serif"
            android:text="総キャリア"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textDirection="ltr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerOfWorkPeriod"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="256dp"
            android:layout_marginEnd="20dp"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/button_input_clear"
            android:layout_width="190dp"
            android:layout_height="36dp"
            android:layout_marginBottom="116dp"
            android:text="入力内容をリセット"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonCalculateRank"
            android:layout_width="172dp"
            android:layout_height="47dp"
            android:layout_marginBottom="44dp"
            android:text="ランキング計算"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>